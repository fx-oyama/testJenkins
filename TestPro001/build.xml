<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="TestPro001">
    <property environment="env"/>
    <property name="ECLIPSE_HOME" value="D:/Eclipse/pleiades4.5jre/eclipse/"/>
    <property name="compile.test.src" location="${basedir}/src"/>
    <property name="report.dir" value="${basedir}/report"/>
    <property name="junit.output.dir" value="/var/lib/jenkins/jobs/Test001/workspace/TestPro001/junit"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.7"/>
    <property name="source" value="1.7"/>
    <path id="JUnit 4.libraryclasspath">
        <pathelement location="/usr/share/java/junit.jar"/>
    </path>
    <path id="TestPro001.classpath">
        <pathelement location="bin"/>
        <path refid="JUnit 4.libraryclasspath"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <mkdir dir="report"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="TestPro001.classpath"/>
        </javac>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
    <target name="ProMain">
        <java classname="com.fx.ProMain" failonerror="true" fork="yes">
            <classpath refid="TestPro001.classpath"/>
        </java>
    </target>
    <target name="TestCalc">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" haltonfailure="false">
            <formatter type="xml"/>
            <test name="com.test.TestCalc" todir="${junit.output.dir}"/>
            <classpath refid="TestPro001.classpath"/>
        </junit>
    </target>
