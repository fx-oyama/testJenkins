<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="TestPro001">
    <property environment="env"/>
    <property name="compile.test.src" location="${basedir}/src"/>
    <property name="report.dir" value="${basedir}/report"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="checkstyle.suppressions.file" value="/usr/local/checkstyle/config/suppressions.xml"/>
    <property name="checkstyle.header.file" value="/usr/local/checkstyle/config/java.header"/>
    <property name="checkstyle.importcontrol.file" value="/usr/local/checkstyle/config/import-control.xml"/>
    <property name="target" value="1.7"/>
    <property name="source" value="1.7"/>
    <property name="findbugs.dir" value="/usr/local/findbugs"/>
    <property name="checkstyle.dir" value="/usr/local/checkstyle"/>
    <property name="compile.dest" location="${basedir}/bin"/>
    <property name="build.SourceDir" location="${basedir}/src"/>
    <property name="findbugs.dir" location="/usr/local/findbugs"/>
	<property name="junit.output.dir" value="${report.dir}/junit"/>
    <property name="junit.src.test" location="src"/>
    <property name="test.build" location="testbuild"/>
    <path id="test.classpath">
    <pathelement location="bin" />
      <pathelement location="${test.build}" />
      <pathelement location="/usr/share/java/junit.jar" />
    </path>
	<path id="JUnit 4.libraryclasspath">
        <pathelement location="/usr/share/java/junit.jar"/>
        <pathelement location="/usr/share/java/hamcrest-core.jar"/>
    </path>
    <path id="TestPro001.classpath">
        <pathelement location="bin"/>
        <path refid="JUnit 4.libraryclasspath"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
    	<mkdir dir="${test.build}"/>
    	<copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-project,Checkstyle,Findbugs,test.all" name="build"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="TestPro001.classpath"/>
        </javac>
        <javac srcdir="${junit.src.test}" destdir="${test.build}" includeAntRuntime="no">
            <classpath refid="test.classpath" />
        </javac>
    </target>
       <target name="TestCalc">
            <mkdir dir="${junit.output.dir}"/>
            <junit fork="yes" printsummary="withOutAndErr">
                <formatter type="xml"/>
                <test name="com.test.CalcUtilTest" todir="${junit.output.dir}"/>
                <classpath refid="TestPro001.classpath"/>
            </junit>
        </target>
        <target name="junitreport">
            <junitreport todir="${junit.output.dir}">
                <fileset dir="${junit.output.dir}">
                    <include name="TEST-*.xml"/>
                </fileset>
                <report format="frames" todir="${junit.output.dir}"/>
            </junitreport>
        </target>
    <!-- =================================
          target: Checkstyle
     ================================= -->
        <taskdef resource="com/puppycrawl/tools/checkstyle/ant/checkstyle-ant-task.properties"
             classpath="${checkstyle.dir}/checkstyle-6.8.1-all.jar"/>
        <delete dir="${report.dir}"/>
        <mkdir dir="${report.dir}"/>
        <target name="Checkstyle" description="checkstyle">
            <checkstyle config="${checkstyle.dir}/config/checkstyle_checks.xml" >
                <formatter type="xml" tofile="${report.dir}/checkstyle-result.xml"/>
                <fileset dir="src">
                    <include name="**/fx/**/*.java"/>
                    <exclude name="**/test/**/*.java,**/package-info.java"/>
                </fileset>
            </checkstyle>
        </target>
    <!-- =================================
          target: Findbugs
    ================================= -->
    <target name="Findbugs">
        <echo message="FINDBUGS_HOME: ${findbugs.dir}"/>
        <taskdef name="findbugs"
            classname="edu.umd.cs.findbugs.anttask.FindBugsTask"
            classpath="${findbugs.dir}/lib/findbugs-ant.jar">
        </taskdef>
        <findbugs home="${findbugs.dir}"
                  output="xml"
                  outputFile="${report.dir}/findbugs.xml" >
            <class location="${compile.dest}"/>
        </findbugs>
      </target>
    <!-- =================================
          target: test.all
    ================================= -->
    <target name="test.all">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <batchtest fork="yes" todir="${junit.output.dir}">
               <fileset dir="${junit.src.test}" >
                  <include name="**/test/**/*Test.java" />
               </fileset>
            </batchtest>
            <classpath refid="TestPro001.classpath"/>
        </junit>
    </target>

</project>
